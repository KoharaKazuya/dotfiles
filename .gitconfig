[user]
    email = reflect.results@gmail.com
    name = KoharaKazuya
[core]
    excludesfile = ~/.gitignore
    autocrlf = false
    quotepath = false
    precomposeunicode = true
[push]
    default = current
[remote]
    pushDefault = origin
[gui]
    encoding = UTF-8
[color]
    ui = auto
[mailmap]
    file = ~/.git.mailmap
[alias]
    a  = add --all
    b  = branch
    c  = commit --message
    d  = diff --color-words
    f  = fetch --prune
    l  = log --oneline
    m  = merge --no-ff
    s  = status --short
    bb = backup-branch
    bd = branch --delete
    ca = commit --amend
    cc = clean-checkout
    co = checkout --quiet
    cp = cherry-pick
    dc = diff --color-words --cached
    ff = flow feature finish
    fs = flow feature start
    mc = merged-clean --all
    ms = merge --squash
    pl = pull --ff-only --prune
    ps = push
    rf = flow release finish
    rs = flow release start
    aff = all-fast-forward-merge
    bbd = backup-delete
    cob = checkout -b
    cod = checkout-default-branch
    coi = checkout-issue
    reb = clean-rebase
    # 人間らしいエイリアス (http://postd.cc/human-git-aliases/)
    unstage = reset --quiet HEAD --
    discard = checkout --
    nevermind = !git reset --hard HEAD && git clean -df
    uncommit = reset --mixed HEAD~
    save = commit --message
    resave = commit --amend
    tags = tag
    branches = branch --all
    stashes = stash list
    remotes = remote -v
    move = mv
    remove = rm
    contributors = shortlog -s -n
    filetrail = log --follow --oneline

[private]
    default-branch = master

[include]
    path = ~/.gitconfig.local
