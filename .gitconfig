[user]
    email = reflect.results@gmail.com
    name = KoharaKazuya
[core]
    excludesfile = ~/.gitignore
    autocrlf = input
    quotepath = false
    precomposeunicode = true
[push]
    default = current
[remote]
    pushDefault = origin
[gui]
    encoding = UTF-8
[color]
    ui = true
[alias]
    a  = add --all
    b  = branch
    c  = commit --message
    d  = diff
    f  = fetch --prune
    l  = log --oneline
    m  = merge --no-ff
    s  = status --short
    bb = !git backup-branch
    ca = commit --amend
    co = checkout --quiet
    cp = cherry-pick
    dc = diff --cached
    fs = flow feature start
    ff = flow feature finish
    ms = merge --squash
    rs = flow release start
    rf = flow release finish
    mc = merged-clean
    cc = clean-checkout
    aff = all-fast-forward-merge
    bbd = backup-delete
    cob = checkout -b
    cod = checkout-default-branch
    reb = clean-rebase

[private]
    default-branch = master

[include]
    path = ~/.gitconfig.local
