[user]
    email = reflect.results@gmail.com
    name = KoharaKazuya
[core]
    excludesfile = ~/.gitignore
    autocrlf = input
    quotepath = false
    precomposeunicode = true
[push]
    default = current
[remote]
    pushDefault = origin
[gui]
    encoding = UTF-8
[color]
    ui = true
[alias]
    a  = add --all
    b  = branch
    c  = commit --message
    d  = diff
    l  = log --oneline
    m  = merge --no-ff
    s  = status --short
    ca = commit --amend
    co = checkout
    cp = cherry-pick
    dc = diff --cached
    fs = flow feature start
    ff = flow feature finish
    ms = merge --squash
    rs = flow release start
    rf = flow release finish
    mc = !(git branch --merged | grep -v master | grep -v develop | grep -v \\* && git branch --all | grep remotes/origin/ | sed -e 's%remotes/origin/%%') | sort | uniq -d | xargs -I{} sh -c 'git push origin :{} && git branch -d {}'
    cc = !"if [ -z \"$(git s)\" ]; then git cod && git pull && git mc; fi"

[include]
    path = ~/.gitconfig.local
