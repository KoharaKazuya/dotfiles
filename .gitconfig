[user]
    email = reflect.results@gmail.com
    name = KoharaKazuya
[core]
    excludesfile = ~/.gitignore
    autocrlf = false
    quotepath = false
    precomposeunicode = true
    ignorecase = false
    attributesfile = ~/.gitattributes
    hooksPath = ~/projects/dotfiles/git-hooks
[init]
    defaultBranch = main
[status]
    showUntrackedFiles = all
[log]
    date = iso-local
[commit]
    template = ~/.gitmessage
[diff]
    algorithm = histogram
[push]
    default = current
[gui]
    encoding = UTF-8
[color]
    ui = auto
[mailmap]
    file = ~/.config/git/.mailmap
[alias]
    a  = add --all
    b  = branch
    c  = commit --message
    d  = diff --color-words='[a-zA-Z0-9]+|[^a-zA-Z0-9 ]+'
    f  = fetch --all --prune --tags
    l  = log --oneline
    m  = merge --no-ff --no-edit
    s  = status --short
    t  = temp
    ba = branch -vv --sort=authordate --all
    bb = backup-branch
    bd = branch --delete
    ca = commit --amend
    cc = clean-checkout
    co = checkout --quiet
    cp = cherry-pick
    dc = diff --color-words='[a-zA-Z0-9]+|[^a-zA-Z0-9 ]+' --cached
    fc = first-commit
    ff = flow feature finish
    fs = flow feature start
    mc = merged-clean --all
    ms = merge --squash
    pl = pull --ff-only --prune
    ps = push origin
    rf = flow release finish
    rs = flow release start
    sh = show --color-words='[a-zA-Z0-9]+|[^a-zA-Z0-9 ]+'
    aff = all-fast-forward-merge
    bbd = backup-delete
    cob = checkout -b
    cod = checkout-default-branch
    reb = clean-rebase
    rev = rev-parse --short --default HEAD
    imgdiff = -c 'diff.image.command = imgdiff --reverse' -c 'core.pager =' diff --diff-filter=M
    # 人間らしいエイリアス (http://postd.cc/human-git-aliases/)
    unstage = reset --quiet HEAD --
    discard = checkout --
    nevermind = !git reset --hard HEAD && git clean -dff
    uncommit = reset --mixed HEAD~
    save = commit --message
    resave = commit --amend --reset-author
    tags = tag
    branches = branch --all
    stashes = stash list
    remotes = remote -v
    move = mv
    remove = rm
    contributors = shortlog -s -n --email
    filetrail = log --follow --oneline

[filter "lfs"]
    process = git-lfs filter-process
    required = true
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
[secrets]
    providers = git secrets --aws-provider
    patterns = (\"|')?(AWS|aws|Aws)?_?(SECRET|secret|Secret)?_?(ACCESS|access|Access)?_?(KEY|key|Key)(\"|')?\\s*(:|=>|=)\\s*(\"|')?[A-Za-z0-9/\\+=]{40}(\"|')?
    allowed = AKIAIOSFODNN7EXAMPLE
    allowed = wJalrXUtnFEMI/K7MDENG/bPxRfiCYEXAMPLEKEY
[private]
    default-branch = main

[include]
    path = ~/.config/git/config
