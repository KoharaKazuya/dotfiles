cdg() {
  if ! builtin command -v peco >/dev/null; then
    printf '[33mThis command depends on [1;3mpeco[0m\n'
    return 1
  fi

  local target="$( \
    git status --short \
      | sed -E 's/^...//' \
      | grep '/' \
      | sed -E 's%/[^/]*$%%' \
      | sort \
      | uniq \
      | peco --query "$*"
  )"
  if [ -n "$target" ]; then
    cd "$target"
  fi
}
