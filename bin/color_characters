#!/bin/sh

set -eu

h() {
  printf '\n\e[37m%s\e[0m\n' "$1"
}

p() {
  printf "%20s -- [$(eval $1)サンプル$(tput sgr0)]\n" "$1"
}

h '装飾'
p 'tput sgr0'
p 'tput bold'
p 'tput dim'
p 'tput sitm'
p 'tput smul'
p 'tput blink'
p 'tput rev'
# p  '\e[0m' 'リセット   '
# p  '\e[1m' '強調       '
# p  '\e[2m' '弱化       '
# p  '\e[3m' '斜体       '
# p  '\e[4m' '下線       '
# p  '\e[5m' '点滅       '
# p  '\e[6m' '点滅 (高速)'
# p  '\e[7m' '反転       '
# p  '\e[8m' '非表示     '
# p  '\e[9m' '取り消し   '

h '前景'
for i in $(seq 0 7); do
  p "tput setaf $i"
done

h '後景'
for i in $(seq 0 7); do
  p "tput setab $i"
done

h '組み合わせ'
p 'tput setaf 3; tput bold' '警告'
p 'tput setaf 2; tput smul' 'リンク'

printf '\n'

echo "$(tput setaf 0)# see manpages"
echo "$(tput setaf 0)\$$(tput sgr0) $(tput setaf 2)man$(tput sgr0) terminfo"
