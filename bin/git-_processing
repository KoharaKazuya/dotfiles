#!/bin/sh

set -eu

# 引数は 3 つ以上必須
[ "$#" -ge 3 ]

# タグ表示
# 例: [cc ]
printf -- '\e[30m%3s: ' "$1"
shift

# 処理中メッセージ表示
# 例: Merging...
printf -- "$1...\n"
shift

{ if sh -c "$*" 2>&1; then
    printf '\e[1;32m✓\e[0m\n'
  else
    printf '\e[1;31m✗\e[0m\n'
  fi
} \
| sed -E 's/^/[30m   | [0m/' \
| awk '$0!~/✗/;/✗/{print;s=1};END{exit s}'
