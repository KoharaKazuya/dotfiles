#!/bin/sh

set -eu

if [ ! -f yarn.lock ]; then
  echo 'not found yarn.lock' >&2
  exit 1
fi

while :; do
  if [ -z "$(yarn-deduplicate --strategy fewer --list yarn.lock)" ]; then
    break
  fi

  echo 'Found Duplicates! Fix Start.' >&2
  yarn-deduplicate --strategy fewer yarn.lock
  yarn install --non-interactive
done

echo 'Done! Success.' >&2
